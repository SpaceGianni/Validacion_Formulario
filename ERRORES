   //6. Validación de la ciudad
   let ciudad = formulario.City;
   let regexCiudad = /^[a-zA-Z]{2,10}$/;

   if (ciudad.value === '') {
       ciudad.classList.add('is-invalid');
       errorTarjeta['ciudad'] = 'Debe ingresar su ciudad';

   } else if (!regexCiudad.test(ciudad.value)) {
       ciudad.classList.add('is-invalid');
       errorTarjeta['ciudad'] = 'Debe elegir una de las opciones';
   } else {
       ciudad.classList.remove('is-invalid');
       ciudad.classList.add('is-valid');
       errorTarjeta['ciudad'] = '¡Correcto!';
   }

    //LOS ERRORES del campo de la ciudad
    if (errorTarjeta['ciudad']) {
        console.log(errorTarjeta);
        if (errorTarjeta['ciudad']) negativeCiudadFeedback.innerHTML = errorTarjeta['ciudad'];
    } else {
        evento.target.submit();
        errorTarjeta['ciudad'] = positiveCiudadFeedback.innerHTML;
    }


       //10. Validación del checkbox
       let checkbox1 = formulario.inlineRadio1;
       let checkbox2 = formulario.inlineRadio2;
       let checkbox3 = formulario.inlineRadio3;
       let checkbox4 = formulario.inlineRadio4;
   
       
       
   
       if (checkbox1.value === 'checked' || checkbox2.value === 'checked' || checkbox3.value === 'checked' || checkbox4.value === 'checked') {
           checkbox4.classList.add('is-valid');
           errorTarjeta['checkbox'] = '¡Correcto!';
   
       } else {
          checkbox4.classList.remove('is-valid');
          checkbox4.classList.add('is-invalid');
           errorTarjeta['checkbox'] = 'Debe seleccionar una opción válida';
       }
   
       //LOS ERRORES del checkbox
       if (errorTarjeta['checkbox']) {
           console.log(errorTarjeta);
           if (errorTarjeta['checkbox']) negativeCheckFeedback.innerHTML = errorTarjeta['checkbox'];
       } else {
           evento.target.submit();
           errorTarjeta['checkbox'] = positiveCheckFeedback.innerHTML;
       }

       let checkbox1 = document.getElementById("inlineRadio1");
let checkbox2 = document.getElementById("inlineRadio2");
let checkbox3 = document.getElementById("inlineRadio3");
let checkbox4 = document.getElementById("inlineRadio4");

checkbox1.addEventListener("change", validaCheckbox, false);
checkbox2.addEventListener("change", validaCheckbox, false);
checkbox3.addEventListener("change", validaCheckbox, false);
checkbox4.addEventListener("change", validaCheckbox, false);

function validaCheckbox(event){
    var checked1 = checkbox1.checked;
    var checked2 = checkbox2.checked;
    var checked3 = checkbox3.checked;
    var checked4 = checkbox4.checked;
    
    if(!checked1 ||!checked2 || !checked3 || !checked4 ){
        let errorTarjeta = {};
        errorTarjeta['checkbox'] = 'Selecciona algo';
        errorTarjeta['checkbox'] = negativeCheckFeedback.innerHTML;
        alert("selecciona una opcion");
    }
    }
   
